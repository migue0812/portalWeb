}
public function update() {
    $conn = $this->getConnection($this->config);
    $sql = 'update bd_sitio SET'
              .'cat_id = :cat_id,'
              .'cat_nombre = :nombre,'
              .'cat_activo = :activo, '
            . 'cat_cat_id = :categoria'
      $params = array(
         ':id'=> $this->getCatId(),
        ':nombre'=>$this->getNombre(),
          ':activo'=>$this->getActivo(),
            ':categoria'=>$this->getCategoria()  
        );
       
    $answer = $conn->prepare($sql);
